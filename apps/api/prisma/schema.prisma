generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
  previewFeatures = []
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(uuid())
  username       String          @unique
  name           String
  email          String          @unique
  bio            String?
  picture_url    String?
  created_at     DateTime        @default(now())
  readings       Reading[]
  likes          Like[]
  marks          Mark[]
  refresh_tokens Refresh_token[]
}

model Refresh_token {
  id         String   @id @default(uuid())
  user_id    String
  token      String   @unique
  expires_at DateTime
  created_at DateTime @default(now())
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model Magic_link {
  id         String   @id @default(uuid())
  email      String
  token      String   @unique
  expires_at DateTime
  used       Boolean  @default(false)
  created_at DateTime @default(now())
}

enum Testament {
  OLD
  NEW
}

model Bible_book {
  id             String          @id @default(uuid())
  name           String          @unique // "Gênesis", "Êxodo"...
  order          Int             @unique // 1 para Gênesis, 2 para Êxodo...
  testament      Testament
  total_chapters Int
  chapters       Bible_chapter[]

  @@index([order])
}

model Bible_chapter {
  id           String        @id @default(uuid())
  book_id      String
  number       Int // 1, 2, 3...
  total_verses Int
  book         Bible_book    @relation(fields: [book_id], references: [id])
  verses       Bible_verse[]

  @@unique([book_id, number])
  @@index([book_id, number])
}

model Bible_verse {
  id         String        @id @default(uuid())
  chapter_id String
  number     Int // 1, 2, 3...
  text       String        @db.Text
  chapter    Bible_chapter @relation(fields: [chapter_id], references: [id])
  readings   Reading[]
  likes      Like[]
  marks      Mark[]

  @@unique([chapter_id, number])
  @@index([chapter_id, number])
}

enum ReadingMode {
  DISCOVERY
  JOURNEY
}

model Reading {
  id       String      @id @default(uuid())
  user_id  String
  verse_id String
  mode     ReadingMode
  read_at  DateTime    @default(now())
  user     User        @relation(fields: [user_id], references: [id])
  verse    Bible_verse @relation(fields: [verse_id], references: [id])

  @@index([user_id, read_at])
  @@index([verse_id])
}

model Like {
  id         String      @id @default(uuid())
  user_id    String
  verse_id   String
  created_at DateTime    @default(now())
  user       User        @relation(fields: [user_id], references: [id])
  verse      Bible_verse @relation(fields: [verse_id], references: [id])

  @@unique([user_id, verse_id])
  @@index([user_id])
}

model Mark {
  id            String      @id @default(uuid())
  user_id       String
  verse_id      String
  selected_text String      @db.Text
  anotacao      String?     @db.Text
  is_public     Boolean     @default(false)
  created_at    DateTime    @default(now())
  user          User        @relation(fields: [user_id], references: [id])
  verse         Bible_verse @relation(fields: [verse_id], references: [id])

  @@index([user_id, is_public])
  @@index([verse_id])
}
